<Application x:Class="GraphExpectedValue.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GraphExpectedValue"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ToolTip x:Key="inputTooltip">
            <TextBlock>
                Suppoerted operations:
                <LineBreak/>
                sin(x), cos(x), tan(x), cot(x) - standart trigonometry functions;
                <LineBreak/>
                asin(x), acos(x), atan(x), acot(x) - inverse trigonometry functions;
                <LineBreak/>
                sinh(x), cosh(x), tanh(x), coth(x) - hyperbolic trigonometry functions;
                <LineBreak/>
                asinh(x), acosh(x), atanh(x), acoth(x) - inverse hyperbolic trigonometry functions;
                <LineBreak/>
                sqrt(x) - square root;
                <LineBreak/>
                ln(x) - natural logarithm;
                <LineBreak/>
                log(a) - decimal logarithm;
                <LineBreak/>
                log(a, b) = log_b(a);
                <LineBreak/>
                e;
                <LineBreak/>
                pi;
                <LineBreak/>
                a^b = a in power of b
            </TextBlock>
        </ToolTip>
    </Application.Resources>
</Application>
